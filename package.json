{
  "name": "relationship-reminder-bot",
  "version": "1.0.0",
  "description": "Telegram bot for relationship reminders - notes, wishes, important dates",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "embed-compliments": "node scripts/embed-compliments.cjs",
    "build": "npm run embed-compliments && tsc",
    "start": "node dist/index.js",
    "predev": "npm run embed-compliments",
    "dev": "tsx watch src/index.ts",
    "db:reset": "tsx scripts/reset-db.ts",
    "reset-role": "tsx scripts/reset-role.ts",
    "count-pairs": "tsx scripts/count-pairs.ts",
    "prepare": "husky"
  },
  "keywords": [
    "telegram",
    "bot",
    "telegraf",
    "reminder",
    "relationship"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "dotenv": "^16.4.5",
    "node-cron": "^3.0.3",
    "telegraf": "^4.16.3",
    "telegraf-calendar-telegram": "^2.0.2"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.1",
    "@types/node-cron": "^3.0.11",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
